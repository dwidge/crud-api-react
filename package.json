{
  "name": "@dwidge/crud-api-react",
  "version": "0.0.44",
  "description": "A CRUD API library with swr for React applications.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dwidge/crud-api-react.git"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "prepare": "rimraf dist && ncp assets/ dist/ && tsc -b . tsconfig.cjs.json tsconfig.test.json",
    "test": "node --enable-source-maps --test --test-name-pattern"
  },
  "peerDependencies": {
    "@dwidge/hooks-react": "^0.0.30",
    "@dwidge/query-axios-zod": "^0.0.18",
    "@dwidge/utils-js": "^0.0.26",
    "axios": "^1.7.7",
    "react": "^19.0.0",
    "swr": "^2.3.6",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.15.21",
    "ncp": "^2.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@9.12.1",
  "engines": {
    "node": ">=20"
  }
}
